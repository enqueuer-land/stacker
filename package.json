{
  "name": "stacker",
  "version": "1.0.0",
  "description": "Asynchronous messaging communication testing UI tool",
  "main": "src/electron.ts",
  "scripts": {
    "all": "npm run lint && npm test && npm start",
    "lint": "node_modules/.bin/tslint --project tsconfig.json --force",
    "test": "jest --forceExit",
    "start": "node_modules/.bin/electron .",
    "make": "node_modules/.bin/electron-forge make"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "enqueuer": "^3.3.6",
    "node-sass": "^4.9.2",
    "sass-loader": "^7.1.0",
    "vue": "^2.4.4",
    "vueify": "^9.4.1"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.0.2",
    "@types/jest": "^22.2.3",
    "@types/request": "^2.47.1",
    "@vue/test-utils": "^1.0.0-beta.16",
    "electron": "^1.7.6",
    "electron-devtools-installer": "^2.2.0",
    "electron-forge": "4.0.2",
    "electron-prebuilt-compile": "1.7.6",
    "jest": "^23.0.1",
    "ts-jest": "^23.10.0",
    "tslint": "^5.7.0",
    "typescript": "^2.9.2",
    "vue-jest": "^2.6.0"
  },
  "author": "Virgs",
  "license": "MIT",
  "config": {
    "forge": "./forge.config.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "globals": {
      "vue-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "vue"
    ]
  }
}

{
  "name": "stacker",
  "version": "0.1.0",
  "private": true,
  "description": "Multi IPC protocol GUI client testing tool",
  "author": {
    "name": "Virgs",
    "email": "guilherme.moraes@outlook.com",
    "url": "http://github.com/lopidio"
  },
  "scripts": {
    "clear": "rm -rf node_modules/ dist/ package-lock.json && npm install",
    "lint": "node_modules/.bin/vue-cli-service lint",
    "dev": "NODE_ENV=DEV node_modules/.bin/vue-cli-service serve --port 8090 & sleep 5 && NODE_ENV=DEV node_modules/.bin/electron src/electron.js",
    "compile": "node_modules/.bin/vue-cli-service build",
    "build": "GH_TOKEN=9fe73b6d02afe74e423b52192422fe2edf06fcaa node_modules/.bin/electron-builder"
  },
  "dependencies": {
    "enqueuer": "^4.1.2",
    "request": "^2.88.0",
    "vue": "^2.5.17",
    "vue-prism-editor": "^0.1.2",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-service": "^3.1.4",
    "amqp": "^0.2.7",
    "babel-eslint": "^10.0.1",
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.9.0",
    "eslint-plugin-vue": "^5.0.0-beta.4",
    "mqtt": "^2.18.8",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bin": {},
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopidio/stacker"
  },
  "vue": {
    "publicPath": "./"
  },
  "main": "./src/electron.js",
  "build": {
    "appId": "com.electron.virgs.stacker",
    "productName": "stacker",
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.devtool"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.png"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./dist/index.html",
      "./src/electron.js",
      "./src/preload.js",
      "./package.json",
      ".stacker/**/*",
      "node_modules/**/*"
    ]
  }
}

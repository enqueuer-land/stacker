{
  "name": "stacker",
  "version": "0.1.0",
  "private": true,
  "description": "Multi IPC protocol GUI client testing tool",
  "author": {
    "name": "Virgs",
    "email": "guilherme.moraes@outlook.com",
    "url": "http://github.com/lopidio"
  },
  "scripts": {
    "lint": "node_modules/.bin/vue-cli-service lint",
    "dev": "NODE_ENV=DEV node_modules/.bin/vue-cli-service serve --port 8090 & sleep 5 && NODE_ENV=DEV electron src/electron.js",
    "electron:build": "node_modules/.bin/vue-cli-service electron:build",
    "electron:serve": "node_modules/.bin/vue-cli-service electron:serve"
  },
  "dependencies": {
    "amqp": "^0.2.7",
    "enqueuer": "^4.0.0",
    "mqtt": "^2.18.8",
    "vue": "^2.5.17",
    "vue-prism-editor": "^0.1.2",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-service": "^3.1.4",
    "babel-eslint": "^10.0.1",
    "electron": "^4.0.0",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.9.0",
    "eslint-plugin-vue": "^5.0.0-beta.4",
    "vue-cli-plugin-electron-builder": "^1.0.0-rc.9",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bin": {},
  "license": "MIT",
  "main": "src/electron.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopidio/stacker"
  },
  "build": {
    "appId": "com.virgs.stacker",
    "productName": "stacker",
    "files": [
      "build/**/*",
      "public/**/*",
      "preload.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
